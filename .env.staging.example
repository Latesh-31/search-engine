# Staging environment configuration
NODE_ENV=production
HOST=0.0.0.0
PORT=3000
LOG_LEVEL=debug
AWS_REGION=us-east-1

# Credentials are sourced from AWS Secrets Manager via ExternalSecret.
# The values below are placeholders to document the required keys.
DATABASE_URL=
OPENSEARCH_NODE=https://search-platform-staging-xxxxxxxx.us-east-1.es.amazonaws.com
OPENSEARCH_USERNAME=
OPENSEARCH_PASSWORD=
OPENSEARCH_CA_CERT_PATH=/etc/pki/ca-trust/extracted/pem/tls-ca-bundle.pem
OPENSEARCH_BOOTSTRAP_ENABLED=false

# OpenTelemetry
OTEL_ENABLED=true
OTEL_SERVICE_NAME=search-platform-api
OTEL_EXPORTER_OTLP_ENDPOINT=https://otel-collector.staging.your-org.com/v1/traces
OTEL_EXPORTER_OTLP_HEADERS=Authorization=Bearer ${OTEL_API_TOKEN}
OTEL_METRICS_PORT=9464
OTEL_METRICS_ENDPOINT=/metrics
