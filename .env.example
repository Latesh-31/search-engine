# Core application settings
NODE_ENV=development
HOST=0.0.0.0
PORT=3000
LOG_LEVEL=info

# PostgreSQL configuration
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=search_service
POSTGRES_USER=search_user
POSTGRES_PASSWORD=search_password
DATABASE_URL=postgresql://search_user:search_password@postgres:5432/search_service
SHADOW_DATABASE_URL=

# OpenSearch configuration
OPENSEARCH_NODE=http://opensearch:9200
OPENSEARCH_USERNAME=
OPENSEARCH_PASSWORD=
# OPENSEARCH_USERNAME_FILE=/run/secrets/opensearch_username
# OPENSEARCH_PASSWORD_FILE=/run/secrets/opensearch_password
# OPENSEARCH_CA_CERT_PATH=/etc/opensearch/certs/ca.pem
# OPENSEARCH_TLS_REJECT_UNAUTHORIZED=true
OPENSEARCH_BOOTSTRAP_ENABLED=true

# OpenTelemetry configuration
OTEL_ENABLED=false
OTEL_SERVICE_NAME=search-platform-api
# OTEL_EXPORTER_OTLP_ENDPOINT=http://otel-collector:4318/v1/traces
# OTEL_EXPORTER_OTLP_HEADERS={"Authorization":"Bearer YOUR_TOKEN"}
OTEL_METRICS_PORT=9464
OTEL_METRICS_ENDPOINT=/metrics
