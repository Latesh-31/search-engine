# Production environment configuration
NODE_ENV=production
HOST=0.0.0.0
PORT=3000
LOG_LEVEL=info
AWS_REGION=us-east-1

# Real values are managed by AWS Secrets Manager and injected via Kubernetes ExternalSecret.
DATABASE_URL=
OPENSEARCH_NODE=https://search-platform-prod-xxxxxxxx.us-east-1.es.amazonaws.com
OPENSEARCH_USERNAME=
OPENSEARCH_PASSWORD=
OPENSEARCH_CA_CERT_PATH=/etc/pki/ca-trust/extracted/pem/tls-ca-bundle.pem
OPENSEARCH_BOOTSTRAP_ENABLED=false

OTEL_ENABLED=true
OTEL_SERVICE_NAME=search-platform-api
OTEL_EXPORTER_OTLP_ENDPOINT=https://otel-collector.prod.your-org.com/v1/traces
OTEL_EXPORTER_OTLP_HEADERS=Authorization=Bearer ${OTEL_API_TOKEN}
OTEL_METRICS_PORT=9464
OTEL_METRICS_ENDPOINT=/metrics
